<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="thirdFifthLevelItemsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="thirdFifthLevelItemImageStyle">
        <item name="android:layout_width">@dimen/third_level_image_size</item>
        <item name="android:layout_height">@dimen/third_level_image_size</item>
    </style>

    <style name="thirdFifthLevelItemTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="baseButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="OneWrongStatementTaskFactRadioButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">@drawable/transparent_background_with_border</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="buttonTint">@color/border_grey</item>
    </style>

</resources>